{
  "name": "@lampajr/scdl-lib",
  "version": "1.0.0",
  "description": "Smart Contract Description Language api library",
  "keywords": [
    "SCDL",
    "Smart",
    "Contract",
    "Descriptor",
    "Blockchain"
  ],
  "author": "lampajr <lampa9559@gmail.com>",
  "homepage": "https://github.com/lampajr/toolscip/tree/master/packages/scdl-lib#readme",
  "license": "Apache-2.0",
  "engines": {
    "node": ">= 10.16.3"
  },
  "main": "dist/index.js",
  "type": "dist/index.d.ts",
  "directories": {
    "lib": "src",
    "test": "__tests__"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lampajr/toolscip.git"
  },
  "scripts": {
    "build": "npm run clean && npm run format && npm run lint && npm run compile",
    "clean": "rm -rf ./dist",
    "compile": "tsc -b tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepublishOnly": "npm run build",
    "docs": "typedoc --out docs src/*"
  },
  "bugs": {
    "url": "https://github.com/lampajr/toolscip/issues"
  },
  "dependencies": {
    "@lampajr/jsonrpc-lib": "^0.1.1",
    "@lampajr/scip-lib": "^1.0.0"
  },
  "devDependencies": {
    "prettier": "^1.19.1"
  }
}
