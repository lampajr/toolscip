{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./packages",
    "paths": {
      "@toolusci/scip-lib": ["scip-lib/dist"],
      "@toolusci/scdl-lib": ["scdl-lib/dist"],
      "@toolusci/clisc": ["clisc/dist"]
    }
  },
  "exclude": ["node_modules", "dist", "__tests__", "docs", "examples"]
}
